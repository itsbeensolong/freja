---
import Navbar from "../components/Navbar.jsx";
import instargram from "../../public/instagram.svg";
import { Image } from "astro:assets";

interface Props {
  title: string;
}

const { title } = Astro.props;

const CLASSNAME_COMPONENT = {
  navbarClassName: "navbar-freja",
  navbarClassNameList: "list-navbar",
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div class="oferta-freja">
        <h5>Aprovecha las ofertas en descuento <b>Â¡Compra Ahora!</b></h5>
        <Image src={instargram} alt="Instagram de freja" width="23" />
      </div>
      <Navbar
        navbarClassName={CLASSNAME_COMPONENT.navbarClassName}
        navbarClassNameList={CLASSNAME_COMPONENT.navbarClassNameList}
      />
    </header>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    /** ----------------------------------- Primary ----------------------------------------- */
    --freja-c-white: #fff;
    --freja-c-black: #000;
    --freja-c-zinc: #222222;
    --freja-c-brown: #c7ab62;
    --freja-c-gray: #4f4f4f;
    --freja-c-gray-ligth: #f7f5f4;
    --freja-c-red: #ff0000;

    /** --------------------------------------- Secundary ---------------------------------- */
    --freja-c-pushy-pending: #ae7c72;
    --freja-c-green-ligth: #b7e66c;
    --freja-c-green-dark: #3aa560;
    --freja-c-green-gradient: linear-gradient(115deg, #3aa560, #b7e66c);
    --freja-c-shadow: #00000033;
  }
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
  }
  html {
    font-family: system-ui, sans-serif;
  }
  body {
    font-size: 16px;
    margin: 0;
  }
  .oferta-freja {
    background-color: var(--freja-c-gray-ligth);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.4rem 1rem;
  }
  .oferta-freja h5 {
    font-weight: lighter;
  }
  .oferta-freja b {
    color: var(--freja-c-brown);
    text-decoration: underline;
    cursor: pointer;
  }
  .navbar-freja {
    display: flex;
    justify-content: space-between;
    align-items: center;

    background-color: var(--freja-c-white);
    padding: 1rem;
    box-shadow: 0px 2px 4px -1px var(--freja-c-shadow);
  }
  .navbar-freja .list-navbar {
    display: flex;
    align-items: center;
    gap: 1rem;
    list-style: none;
  }
  .navbar-freja .list-navbar li a {
    color: var(--freja-c-black);
  }
  .navbar-freja .list-navbar li a:hover {
    color: var(--freja-c-brown);
    transition: color 0.3s;
  }
  a {
    text-decoration: none;
  }
</style>
